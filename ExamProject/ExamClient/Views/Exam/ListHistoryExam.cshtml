@{
}
@model List<ExamProject.Models.Exam>

<h2>Danh sách bài thi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày làm bài thi </th>
            <th>Điểm</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.StartTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@exam.Score/10</td>
                <td>
                    <a href="@Url.Action("History", "Exam", new { examId = exam.ExamId })" class="btn btn-primary">Xem lịch sử bài thi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
